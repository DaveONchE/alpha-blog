<% if @article.errors.any? %>
    <h2>The following errors prevented the article from getting created</h2>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<div class="row">
    <div class="col-12">
        <%= form_for @article do |f| %>
            <div class="form-group">
                <%= f.label :title, class: "col-sm-2 col-form-label" %>
                <div class="col-sm-12">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :description, class: "col-sm-2 col-form-label" %>
                <div class="col-sm-12">
                    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of Article", autofocus: true %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-2">
                    <%= f.submit class: "btn btn-primary btn-lg" %>
                </div>
            </div>
        <% end %>
        <div class="col-4 col-offset-4">
            [ <%= link_to "cancel request and return to articles listing", articles_path %> ]
        </div>
    </div>
</div>